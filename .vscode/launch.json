{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    // 调试配置数组
    "configurations": [
        {
            // 名称
            "name": "Build Plugin",
            // BDS路径
            "program": "C:\\Server\\Beta\\bedrock_server_mod.exe",
            // VS调试
            "type": "cppvsdbg",
            // 直接运行
            "request": "launch",
            // 不知道干嘛的 留空
            "args": [
            ],
            // 是否在程序运行之初，即main函数第一行进入调试状态
            "stopAtEntry": false,
            // 执行目录指定为该变量时，会根据CMake目标程序所在目录设置当前执行目录
            "cwd": "${workspaceRoot}",
            "environment": [],
            // 调试控制台  internalConsole使用VSC内置控制台  externalTerminal外部控制台
            "console": "internalConsole",
            // 执行tasks  build任务
            "preLaunchTask": "build",
            "logging": {
                "moduleLoad": false
            }
        },
        // 附加调试
        {
            "name": "(vsdbg) 附加",
            // 调试方式，vs调试
            "type": "cppvsdbg",
            // 类型为附加调试
            "request": "attach",
            // 选择进程
            "processId": "${command:pickProcess}",
            "logging": {
                "moduleLoad": false,
                "trace": true
            },
            // 附加PDB
            "visualizerFile":"D:\\Repo\\test-c\\build\\Release\\plugin.pdb"
        }
    ]
}